<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">




    <PreferenceCategory app:title="@string/url_header">
        <EditTextPreference
            app:key="@string/url_key"
            app:title="@string/url_title"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/url_default"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/camscan_header">
        <CheckBoxPreference
            app:defaultValue="false"
            app:key="@string/prgscan_key"
            app:title="@string/prgscan_title" />
    </PreferenceCategory>



    <PreferenceCategory app:title="@string/sync_header">
        <ListPreference
            app:key="@string/sync_key"
            app:defaultValue="@string/sync_default"
            app:entries="@array/sync_names"
            app:entryValues="@array/sync_values"
            app:title="@string/sync_title"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>





</PreferenceScreen>