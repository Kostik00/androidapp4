<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/url_header">
        <EditTextPreference
            app:key="@string/url_key"
            app:title="@string/url_title"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/url_default"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/prgscan_header">
        <CheckBoxPreference
            app:defaultValue="false"
            app:key="@string/prgscan_key"
            app:title="@string/prgscan_title" />
    </PreferenceCategory>



    <PreferenceCategory app:title="@string/mtask_sync_header">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/mtask_sync_activity_key"
            android:title="@string/mtask_sync_activity_title" />
        <ListPreference
            app:key="@string/mtask_sync_period_key"
            app:defaultValue="@string/mtask_sync_period_default"
            app:entries="@array/mtask_sync_period_names"
            app:entryValues="@array/mtask_sync_period_values"
            app:title="@string/mtask_sync_period_title"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>





</PreferenceScreen>