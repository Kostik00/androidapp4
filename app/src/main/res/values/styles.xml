<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay"  parent="ThemeOverlay.AppCompat.Light" />


    <style name="LoginFormInputField">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LoginFormButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/auth_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LargeCaption">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DataCaption">
        <item name="android:textColor">#979595</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DataText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DSETitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DSEDescription">
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaspTitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MainTextEdit">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PlaceLarge">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="MicroCaption">
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MicroValue">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
